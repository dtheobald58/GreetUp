@model IEnumerable<GreetUp.Models.RSVP>

@{
    ViewBag.Title = "RSVPs";
}

<h2>RSVPs</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Event.OrganizerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrimaryGuestName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumOfGuests)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Event.OrganizerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrimaryGuestName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumOfGuests)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
